<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="fill_height">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="top_bar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/top_bar_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/action_bar_height</item>
    </style>

    <style name="top_bar_text">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#64000000</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="top_bar_btn">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">3.0dip</item>
        <item name="android:paddingRight">3.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="top_bar_left_btn" parent="@style/top_bar_btn">
        <item name="android:layout_marginLeft">8.0dip</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="top_bar_back_btn">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/back_btn</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8.0dip</item>
        <item name="android:text">@string/back</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="top_bar_right_btn" parent="@style/top_bar_btn">
        <item name="android:layout_marginRight">8.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="bottom_bar_bg">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/btm_bar_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/action_bar_height</item>
    </style>

    <style name="bottom_bar_item">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="empty_msg">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff888888</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
    </style>

    <style name="empty_msg_content" parent="@style/empty_msg">
        <item name="android:gravity">left|center</item>
        <item name="android:background">@drawable/box_empty_bg</item>
        <item name="android:lineSpacingExtra">5.0px</item>
    </style>

    <style name="padding_left_right">
        <item name="android:paddingLeft">@dimen/normal_space</item>
        <item name="android:paddingRight">@dimen/normal_space</item>
    </style>

    <style name="btn_complete" parent="@style/padding_left_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:src">@drawable/completed</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="item_content_wrap">
        <item name="android:background">@drawable/row_bg</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:longClickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="text_base">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="text_single" parent="@style/text_base">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="list_item_title" parent="@style/text_single">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="list_item_small_text">
        <item name="android:textSize">11.0sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/normal_space</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="viewpage_normal_text">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="editview">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">@dimen/normal_space</item>
        <item name="android:paddingRight">@dimen/normal_space</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44.0dip</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="editview_with_cap_sentences" parent="@style/editview">
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="editview_item" parent="@style/editview">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
        <item name="android:maxLength">@integer/task_note_max_length</item>
        <item name="android:minHeight">34.0dip</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="add_linearlayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="itemview">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="radio_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@android:drawable/btn_radio</item>
        
    </style>

</resources>